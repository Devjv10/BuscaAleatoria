import random
import math

# Função que queremos minimizar
def f(x):
    return x**2 + 10 * math.sin(x)

# Constantes
LIMITE_INFERIOR = -10
LIMITE_SUPERIOR = 10
ITERACOES = 100

# Gera todos os valores aleatórios de uma vez
xs = [random.uniform(LIMITE_INFERIOR, LIMITE_SUPERIOR) for _ in range(ITERACOES)]

# Calcula f(x) para todos os valores em lote
valores = [f(x) for x in xs]

# Identifica o melhor
melhor_valor = min(valores)
melhor_x = xs[valores.index(melhor_valor)]

print("Melhor x encontrado:", melhor_x)
print("Valor de f(x):", melhor_valor)
