import random

# Função simples para minimizar
def f(x):
    return x * x  # x²

# Gera 100 valores aleatórios de uma vez (mais rápido)
xs = [random.uniform(-10, 10) for _ in range(100)]

# Calcula f(x) para todos os valores de uma vez (mais rápido)
valores = [f(x) for x in xs]

# Encontra o melhor valor e o x correspondente
melhor_valor = min(valores)
melhor_x = xs[valores.index(melhor_valor)]

print("Melhor x encontrado:", melhor_x)
print("Menor valor da função:", melhor_valor)
